<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="40dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/feedrv_cv_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#AEAEAE"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/feedrv_iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/feedrv_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dsjkfhklsdhfjkdsfjsdahfksdfhlskdfkjsdfklsdhsdkjvdjsnvkdslnvjdsk"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#1E1E1E"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/noto_sans"
        android:gravity="start|center"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/feedrv_cv_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/feedrv_tv_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#757575"
        android:layout_marginTop="-5dp"
        android:fontFamily="@font/noto_sans"
        android:gravity="start|center"
        app:layout_constraintTop_toBottomOf="@id/feedrv_tv_title"
        app:layout_constraintStart_toStartOf="@id/feedrv_tv_title"/>

    <TextView
        android:id="@+id/feedrv_tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayush"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primart_1"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/noto_sans"
        android:gravity="start|center"
        app:layout_constraintTop_toTopOf="@id/feedrv_tv_by"
        app:layout_constraintStart_toEndOf="@id/feedrv_tv_by"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/feedrv_iv_likeicon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_like1"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/feedrv_tv_by"
        app:layout_constraintStart_toStartOf="@id/feedrv_tv_by"/>

    <TextView
        android:id="@+id/feedrv_tv_likecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/feedrv_iv_likeicon"
        app:layout_constraintTop_toTopOf="@id/feedrv_iv_likeicon"
        app:layout_constraintBottom_toBottomOf="@id/feedrv_iv_likeicon"/>

</androidx.constraintlayout.widget.ConstraintLayout>