<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AssignmentGrowigh" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AssignmentGrowigh.Onboarding" parent="Base.Theme.AssignmentGrowigh">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.AssignmentGrowigh.WelcomeActivity" parent="Base.Theme.AssignmentGrowigh">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.AssignmentGrowigh.FeedActivity" parent="Base.Theme.AssignmentGrowigh">
        <item name="android:statusBarColor">#3276A7</item>
        <item name="android:textColorHint">#3D3D3D</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">#1E1E1E</item>
    </style>

    <style name="Theme.AssignmentGrowigh.CardView" parent="Base.Theme.AssignmentGrowigh">
        <item name="android:foreground">@drawable/cardview_gradient_background</item>
    </style>
</resources>